<idea-plugin>
    <id>fr.pralexio.perplexityintegration</id>
    <name>Perplexity Chat Integration</name>
    <vendor>pralexio</vendor>
    <description>Integrates Perplexity AI chat directly into your IDE. Get instant access to AI-powered conversations without leaving your code editor. Perfect for quick research, code explanations, and creative assistance while developing.</description>
    <version>1.5</version>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow
                id="Perplexity"
                anchor="right"
                icon="/icons/perplexity.png"
                factoryClass="fr.pralexio.perplexityintegration.PerplexityToolWindowFactory"/>

        <notificationGroup id="Perplexity.Notifications"
                           displayType="BALLOON"
                           isLogByDefault="true"/>

        <applicationService serviceImplementation="fr.pralexio.perplexityintegration.PerplexitySettings"/>
    </extensions>
</idea-plugin>
